<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">

    <persistence-unit name="myPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <class>com.really.good.sir.entity.CredentialEntity</class>
        <class>com.really.good.sir.entity.UserSessionEntity</class>
        <class>com.really.good.sir.entity.DoctorEntity</class>
        <class>com.really.good.sir.entity.PatientEntity</class>
        <class>com.really.good.sir.entity.AppointmentEntity</class>
        <class>com.really.good.sir.entity.AppointmentOutcomeEntity</class>
        <class>com.really.good.sir.entity.DoctorScheduleEntity</class>
        <class>com.really.good.sir.entity.PatientAppointmentEntity</class>
        <class>com.really.good.sir.entity.PatientAppointmentOutcomeEntity</class>
        <class>com.really.good.sir.entity.ServiceEntity</class>
        <class>com.really.good.sir.entity.SpecializationEntity</class>

        <properties>
            <!-- JDBC -->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/healthcare_app"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>

    </persistence-unit>

</persistence>
